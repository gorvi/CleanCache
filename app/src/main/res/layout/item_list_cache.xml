<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="60dip"
    android:background="@drawable/item_selector" >

    <ImageView
        android:id="@+id/item_list_cache_iv_appicon"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3dip"
        android:src="@drawable/ic_launcher" />

    <!--    <CheckBox
           android:focusable="false"
           android:clickable="false"
           android:id="@+id/cb_clean_item_status"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:layout_centerVertical="true"
           android:layout_marginRight="10dip"
            /> -->

    <TextView
        android:layout_marginTop="5dip"
        android:id="@+id/item_list_cache_tv_appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_list_cache_iv_appicon"
        android:text="AppName"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <TextView
        android:layout_marginLeft="10dip"
        android:layout_marginBottom="5dip"
        android:id="@+id/item_list_cache_tv_cachesize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_list_cache_tv_appname"
        android:layout_alignParentBottom="true"
        android:text="CacheSize"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#66000000" />
</RelativeLayout>